<%- include('../../partials/header_admin.ejs'); %>
<link rel="stylesheet" href="/css/admin.css">

<section class="menu-superior">
  <nav>
    <ol>
      <li class="menu-superior-item menu-superior-disable">Usuários</li>
      <li class="menu-superior-item"><a href="/admin/posts/view">Postagens</a></li>
      <li class="menu-superior-item"><a href="/admin/categories/view">Categorias</a></li>
    </ol>
  </nav>
</section>

<section class="breadcrumb">
  <nav>
    <ol>
      <li class="breadcrumb-item"><a href="/admin/users/view">Usuários</a></li>
      <li class="breadcrumb-item breadcrumb-active" aria-current="page">Editar Usuário</li>
    </ol>
  </nav>
</section>

<div class="container-500">

  <h1 class="form-title-center">Editar Usuário</h1>
  <div class="form-login">
    <form method="POST" action="/admin/users/update" enctype="multipart/form-data">
      <input type="hidden" name="id" value="<%= user.id %>">
      <input class="form-input" type="text" value="<%= user.name %>" name="name" placeholder="Digite seu nome">

      <label for="imagem_post">Foto de perfil</label>
      <input id="imagem_post" type="file" name="image">

      <input class="form-input" type="text" value="<%= user.email %>" name="email" placeholder="Digite seu e-mail">
      <input class="form-input" type="text" value="" name="password" placeholder="Criar senha nova">
      <button class="btn btn-success">Atualizar Usuário</button>
    </form>
  </div>

</div>





